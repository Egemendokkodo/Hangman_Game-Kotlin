<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363636"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/architects_daughter"
        android:text="Hangman"
        android:textColor="#cfcfcf"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearBottom"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.403"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/citiesBtn"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:background="@drawable/citieslogo"
                android:elevation="5dp"
                android:text="Cities"
                android:textSize="30dp" />

            <Button
                android:id="@+id/planetsBtn"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/planetslogo"
                android:elevation="5dp"
                android:text="Planets"
                android:textColor="@color/black"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="317dp">

            <Button
                android:id="@+id/fruitsBtn"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:background="@drawable/fruitspng"
                android:elevation="5dp"
                android:text="Fruits"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/jobsBtn"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:background="@drawable/jobspng"
                android:elevation="5dp"
                android:text="Jobs"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
